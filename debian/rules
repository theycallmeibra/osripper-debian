#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_install:
	mkdir -p debian/osripper/usr/bin
	mkdir -p debian/osripper/usr/share/osripper
	cp -r * debian/osripper/usr/share/osripper/
	ln -s /usr/share/osripper/OSRipper.py debian/osripper/usr/bin/osripper
	chmod +x debian/osripper/usr/share/osripper/OSRipper.py
