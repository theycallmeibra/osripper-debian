#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_clean:
override_dh_auto_configure:
override_dh_auto_build:
override_dh_auto_test:
override_dh_auto_install:

override_dh_install:
	mkdir -p debian/osripper/usr/bin
	mkdir -p debian/osripper/usr/share/osripper
	# Копируем всё, КРОМЕ папки debian, чтобы избежать рекурсии
	find . -maxdepth 1 ! -name 'debian' ! -name '.' -exec cp -r {} debian/osripper/usr/share/osripper/ \;
	# Создаем ссылку и права
	ln -sf /usr/share/osripper/OSRipper.py debian/osripper/usr/bin/osripper
	chmod +x debian/osripper/usr/share/osripper/OSRipper.py
