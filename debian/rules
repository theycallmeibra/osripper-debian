#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_clean:
override_dh_auto_configure:
override_dh_auto_build:
override_dh_auto_test:
override_dh_auto_install:

override_dh_install:
	mkdir -p debian/osripper/usr/share/osripper
	mkdir -p debian/osripper/usr/bin
	
	# Копируем файлы, исключая debian
	rsync -av . debian/osripper/usr/share/osripper/ --exclude debian
	
	# Устанавливаем права и создаем симлинк напрямую
	# Мы знаем, что файл называется OSRipper.py
	chmod +x debian/osripper/usr/share/osripper/OSRipper.py
	ln -sf /usr/share/osripper/OSRipper.py debian/osripper/usr/bin/osripper
